# Backend - Flask
FLASK_PORT=5000
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0

# Database (PostgreSQL; leave unset to use SQLite via SQLALCHEMY_DATABASE_URI)
# DATABASE_URL=postgresql://user:password@localhost:5432/property_market
DATABASE_URL=postgresql://postgres:admin@localhost:5432/property_market

# Secrets (change in production)
SECRET_KEY=dev-secret-change-in-production
JWT_SECRET_KEY=jwt-secret-change-in-production

# CORS - comma-separated origins (no spaces)
CORS_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000,http://127.0.0.1:3000

# Frontend API base (for reference; frontend uses js/config.js default or meta name="api-base")
# FRONTEND_API_BASE=http://localhost:5000/api
